{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es6", "es2015"],
        "types": ["node"],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true
    },
    "exclude": ["node_modules", "test"],
    "include": ["src"]
}
